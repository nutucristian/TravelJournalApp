<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/add_country_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Country"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/text_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_country_button"
        android:layout_marginTop="-50dp"
        android:layout_marginBottom="8dp"
        android:text="Countries visited (0)"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/country_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_header"
        android:layout_marginTop="8dp" />
</RelativeLayout>
